<h1>Flights:</h1>

<% @flights.each do |flight| %>
  <section id="flight-numbers-<%= flight.id %>">
    <%= flight.number %><%= flight.airline.name %>
      <h3>Passengers:</h3>
        <% flight.passengers.each do |passenger| %>
          <%= passenger.name %>
          <%= button_to "Remove #{passenger.name}", "/flights/#{flight.id}", method: :delete, params: {flight_id: flight.id, passenger_id: passenger.id} %>
        <% end %>
  </section>
<% end %>
